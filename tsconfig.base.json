{
    "compilerOptions": {
      "module": "commonjs",
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "ES2022",
      "sourceMap": true,
      "skipLibCheck": true,
      "composite": true,
      "incremental": true
    },
    "exclude": ["packages/**/tests/**", "packages/**/dist/**"],
    "references": [
      {
        "path": "./apps/*"
      },
      {
        "path": "./libs/*"
      }
    ]
  }
  